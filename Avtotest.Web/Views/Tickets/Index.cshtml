@model List<Ticket>

@{
    ViewData["Title"] = "Tickets";
}

<h1 class="text-center">Tickets List</h1>

@for (var i = 0; i < Model.Count; i++)
{
    var ticketName = $"Ticket{i + 1} {Model[i].CorrectAnswerCount}/{Model[i].QuestionsCount}";
    <div class="text-center">
        <a class="btn btn-primary mb-1" asp-controller="Examination" asp-action="Exam" asp-route-ticketId="@Model[i].Id">@ticketName</a>
        <br>
    </div>
}