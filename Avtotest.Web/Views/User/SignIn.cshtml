@model User;
<h1 class="text-center">Login</h1><br/>

<div class="d-flex justify-content-center">
    <form asp-action="SignIn" method="post" class="mb-3 w-50" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="Phone" class="form-label">Phone Number</label>
            <input class="form-control" id="Phone" name="Phone" placeholder="Phone">
            <div class="form-text">We'll never share your phone number with anyone else.</div>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label for="Password">Password</label>
            <input type="password" class="form-control" id="Password" name="Password" placeholder="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
            <input class="form-control btn-primary" type="submit" value="Sign In"/>
            <span>
                <a asp-action="SignUp" class="text-center form-control btn btn-secondary" value="Sign Up">Sign Up</a>
            </span>
    </form> 
</div>
